{
    "name": "@ianlucas/vrf-decompiler",
    "description": "A Valve Resource Format's Decompiler wrapper for TypeScript",
    "license": "MIT",
    "author": "Ian Lucas",
    "repository": "ianlucas/node-vrf-decompiler",
    "type": "module",
    "main": "dist/src/index.js",
    "scripts": {
        "docs": "typedoc --out docs src/index.ts",
        "format": "prettier . --write",
        "postinstall": "node dist/scripts/postinstall.js",
        "prepack": "([ -d dist ] && rm -rf dist); tsc",
        "test": "vitest --run --testTimeout 120000",
        "upgrade": "npx npm-check-updates@latest --target minor -u"
    },
    "devDependencies": {
        "@types/follow-redirects": "^1.14.4",
        "@types/node": "^18.19.46",
        "@types/unzipper": "^0.10.10",
        "prettier": "3.3.3",
        "typedoc": "^0.26.6",
        "typescript": "^5.5.4",
        "vitest": "^2.0.5"
    },
    "dependencies": {
        "follow-redirects": "^1.15.6",
        "unzipper": "^0.12.3"
    }
}
